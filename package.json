{
  "name": "nest-vite",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "npm run dev:ui & npm run dev:api",
    "dev:ui": "vite --port 8080 --host",
    "dev:api": "nest start --watch",
    "build": "npm run build:ui && npm run build:api",
    "build:ui": "VITE_CJS_IGNORE_WARNING=true npx vite build",
    "build:api": "nest build",
    "start": "node dist/server/main --max-old-space-size=${MEMORY_LIMIT:-512}",
    "test": "concurrently \"npm run test:server\" \"npm run test:ui\"",
    "test:coverage": "concurrently \"npm run test:server-coverage\" \"npm run test:ui-coverage\"",
    "test:server": "jest --config jest-server.config.ts",
    "test:server-coverage": "npm run test:server -- --coverage",
    "test:ui": "jest --config jest-ui.config.ts",
    "test:ui-coverage": "npm run test:ui -- --coverage",
    "lint": "concurrently \"npm run lint:prettier\" \"npm run lint:eslint\" \"npm run lint:type\"",
    "lint:type": "tsc --noEmit",
    "lint:fix": "concurrently \"npm run lint:prettier-fix\" \"npm run lint:eslint-fix\"",
    "lint:eslint": "eslint \"{src,test,e2e}/**/*.{ts,tsx}\" -c .eslintrc.js",
    "lint:eslint-fix": "eslint \"{src,test,e2e}/**/*.{ts,tsx}\" -c .eslintrc.js --fix",
    "lint:prettier": "prettier --config .prettierrc.js 'src/**/*.{ts,tsx}' --check",
    "lint:prettier-fix": "prettier --config .prettierrc.js 'src/**/*.{ts,tsx}' --write"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.10",
    "@nestjs/core": "^10.2.10",
    "@nestjs/platform-express": "^10.2.10",
    "@nestjs/serve-static": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.2.10",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "@types/supertest": "^2.0.16",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "concurrently": "8.2.2",
    "eslint": "8.54.0",
    "eslint-config-secure-typescript": "1.1.2",
    "eslint-plugin-react-refresh": "^0.4.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "3.1.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.2",
    "vite-tsconfig-paths": "^4.2.1"
  }
}